{
  "name": "lightning-nespresso-ui",
  "version": "2.0.0",
  "description": "Nespresso capsule vending machine Bitcoin point of sales terminal. Select your coffee, pay with Bitcoin (via Lightning Network), and the vending machine will deliver your Nespresso capsule.",
  "main": "index.js",
  "scripts": {
    "build": "concurrently --kill-others-on-fail \"yarn build:client\" \"yarn build:server\"",
    "build:client": "react-scripts build",
    "build:server": "cd server && tsc",
    "dev": "concurrently --kill-others-on-fail -n server,client \"yarn start:server\" \"yarn start:client\"",
    "eject": "react-scripts eject",
    "prod": "yarn build && concurrently -n server,client \"nodemon server\" \"cd build && serve\"",
    "start:client": "react-scripts start",
    "start:server": "nodemon --config nodemon.json",
    "test": "react-scripts test"
  },
  "author": {
    "name": "Stephane Roche",
    "email": "bitcoin-studio@protonmail.com",
    "url": "https://bitcoin-studio.com"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@radar/lnrpc": "^0.8.2-beta",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "cryptocompare": "^1.0.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "lodash.debounce": "^4.0.8",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.13.0",
    "qrcode.react": "^1.0.0",
    "query-string": "^6.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0",
    "reactstrap": "^8.2.0",
    "typescript": "^3.7.4"
  },
  "devDependencies": {
    "@types/lodash.debounce": "^4.0.6",
    "@types/qrcode.react": "^1.0.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-ws": "^3.0.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/reactstrap": "^8.2.0",
    "concurrently": "^5.0.2",
    "nodemon": "^2.0.2",
    "ts-node": "^8.5.4"
  }
}
