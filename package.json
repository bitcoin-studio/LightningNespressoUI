{
  "name": "lightning-nespresso-ui",
  "version": "2.0.0",
  "description": "Nespresso capsule vending machine Bitcoin point of sales terminal. Select your coffee, pay with Bitcoin (via Lightning Network), and the vending machine will deliver your Nespresso capsule.",
  "homepage": "https://coffee.bitcoin-studio.com",
  "license": "MIT",
  "author": {
    "name": "Stephane Roche",
    "email": "bitcoin-studio@protonmail.com",
    "url": "https://bitcoin-studio.com"
  },
  "main": "build/index.js",
  "scripts": {
    "build": "yarn lint && yarn build:client && yarn build:server",
    "build:client": "react-scripts build",
    "build:server": "tsc --project server/tsconfig.json",
    "cypress:open": "cypress open",
    "dev": "concurrently --kill-others-on-fail -n client,server \"yarn dev:client\" \"yarn dev:server\"",
    "dev:client": "react-scripts -r @cypress/instrument-cra start",
    "dev:server": "yarn lint:server && ts-node-dev --inspect --respawn --project ./server/tsconfig.json ./server/index.ts",
    "dev:fakeprod": "concurrently -n client,server \"serve -l 3000 build\" \"yarn dev:server\"",
    "eject": "react-scripts eject",
    "lint": "concurrently -n client,server \"yarn lint:client\" \"yarn lint:server\"",
    "lint:client": "eslint --ext .ts,.tsx src/",
    "lint:server": "eslint --ext .ts server/",
    "test": "start-test 3000 cypress:open"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "async-retry": "^1.3.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "ln-service": "^48.3.2",
    "lodash.debounce": "^4.0.8",
    "loglevel": "^1.6.8",
    "qrcode.react": "^1.0.0",
    "query-string": "^6.12.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "reactstrap": "^8.4.1",
    "set-interval-async": "^1.0.32"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.8.1",
    "@cypress/instrument-cra": "^1.1.1",
    "@types/async-retry": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/express-ws": "^3.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.0.10",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/reactstrap": "^8.4.2",
    "@types/set-interval-async": "^1.0.0",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.2.0",
    "cypress": "^4.7.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "istanbul-lib-coverage": "^3.0.0",
    "mock-socket": "^9.0.3",
    "node-sass": "^4.14.1",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.19",
    "start-server-and-test": "^1.11.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.3",
    "whatwg-fetch": "^3.0.0"
  },
  "engines": {
    "node": "14"
  },
  "proxy": "https://localhost:4000"
}
