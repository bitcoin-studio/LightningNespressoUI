{
  "name": "lightning-nespresso-ui",
  "version": "2.0.0",
  "description": "Nespresso capsule vending machine Bitcoin point of sales terminal. Select your coffee, pay with Bitcoin (via Lightning Network), and the vending machine will deliver your Nespresso capsule.",
  "main": "build/index.js",
  "engines": {
    "node": "=10"
  },
  "homepage": "https://coffee.bitcoin-studio.com",
  "proxy": "http://localhost:4000",
  "scripts": {
    "build": "npm run lint && npm run build:client && npm run build:server",
    "build:client": "react-scripts build",
    "build:server": "tsc --project server/tsconfig.json",
    "dev": "concurrently --kill-others-on-fail -n client,server \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "react-scripts start",
    "dev:server": "npm run lint:server && ts-node-dev --inspect --respawn --project ./server/tsconfig.json ./server/index.ts",
    "dev:fakeprod": "concurrently -n client,server \"serve -l 3000 build\" \"npm run dev:server\"",
    "eject": "react-scripts eject",
    "lint": "concurrently -n client,server \"npm run lint:client\" \"npm run lint:server\"",
    "lint:client": "eslint --ext .ts,.tsx src/",
    "lint:server": "eslint --ext .ts server/"
  },
  "author": {
    "name": "Stephane Roche",
    "email": "bitcoin-studio@protonmail.com",
    "url": "https://bitcoin-studio.com"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "async-retry": "^1.3.1",
    "axios": "^0.19.1",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "ln-service": "^47.14.7",
    "lodash.debounce": "^4.0.8",
    "loglevel": "^1.6.6",
    "qrcode.react": "^1.0.0",
    "query-string": "^6.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0",
    "reactstrap": "^8.2.0",
    "set-interval-async": "^1.0.30"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-ws": "^3.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^10.17.13",
    "@types/qrcode.react": "^1.0.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/reactstrap": "^8.2.0",
    "@types/set-interval-async": "^1.0.0",
    "@types/ws": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "1.x",
    "istanbul-lib-coverage": "^3.0.0",
    "mock-socket": "^9.0.3",
    "node-sass": "^4.13.0",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "start-server-and-test": "^1.10.6",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4",
    "whatwg-fetch": "^3.0.0"
  }
}
