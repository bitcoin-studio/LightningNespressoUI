{
  "name": "lightning-nespresso-ui",
  "version": "1.0.0",
  "description": "This repository is part of a vending machine project which connects to a Bitcoin point of sales terminal.\\nSelect your coffee, pay with Bitcoin (via Lightning Network), and the vending machine will deliver your Nespresso capsule.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n server,client \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "webpack-dev-server --open --config ./client/webpack.dev.js",
    "dev:server": "nodemon --config nodemon.json",
    "build": "npm run build-client && npm run build-server",
    "build-client": "NODE_ENV=production webpack -p --progress --config ./client/webpack.prod.js --mode production",
    "build-server": "cd server && tsc"
  },
  "author": {
    "name": "Stephane Roche",
    "email": "bitcoin-studio@protonmail.com",
    "url": "https://bitcoin-studio.com"
  },
  "license": "MIT",
  "dependencies": {
    "@radar/lnrpc": "^0.8.0-beta.4",
    "@types/qrcode.react": "^0.9.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.3.1",
    "cors": "^2.8.5",
    "cryptocompare": "^1.0.0",
    "css-loader": "^3.2.0",
    "dotenv": "^8.1.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "file-loader": "^4.2.0",
    "html-webpack-plugin": "^3.2.0",
    "lodash.debounce": "^4.0.8",
    "node-fetch": "^2.6.0",
    "node-sass": "^4.12.0",
    "qrcode.react": "^0.9.3",
    "query-string": "^6.8.3",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-hot-loader": "^4.12.15",
    "reactstrap": "^8.0.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "ts-loader": "^6.2.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.8.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-ws": "^3.0.0",
    "@types/react": "^16.9.5",
    "@types/react-dom": "^16.9.1",
    "@types/reactstrap": "^8.0.5",
