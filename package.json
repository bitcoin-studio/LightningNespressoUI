{
  "name": "lightning-nespresso-ui",
  "version": "2.0.0",
  "description": "Nespresso capsule vending machine Bitcoin point of sales terminal. Select your coffee, pay with Bitcoin (via Lightning Network), and the vending machine will deliver your Nespresso capsule.",
  "main": "build/index.js",
  "engines": {
    "node": "=10"
  },
  "homepage": "https://coffee.bitcoin-studio.com",
  "proxy": "http://localhost:4000",
  "scripts": {
    "build": "yarn lint && yarn build:client && yarn build:server",
    "build:client": "react-scripts build",
    "build:server": "tsc --project server/tsconfig.json",
    "cypress:open": "cypress open",
    "dev": "start-test 3000 cypress:open",
    "eject": "react-scripts eject",
    "lint": "concurrently -n client,server \"yarn lint:client\" \"yarn lint:server\"",
    "lint:client": "eslint --ext .ts,.tsx src/",
    "lint:server": "eslint --ext .ts server/",
    "prod": "concurrently -n client,server \"serve -l 3000 build\" \"yarn start:server\"",
    "start": "concurrently --kill-others-on-fail -n client,server \"yarn start:client\" \"yarn start:server\"",
    "start:client": "react-scripts -r @cypress/instrument-cra start",
    "start:server": "yarn lint:server && ts-node-dev --inspect --respawn --project ./server/tsconfig.json ./server/index.ts",
    "test": "react-scripts test"
  },
  "author": {
    "name": "Stephane Roche",
    "email": "bitcoin-studio@protonmail.com",
    "url": "https://bitcoin-studio.com"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "@radar/lnrpc": "^0.8.2-beta",
    "async-retry": "^1.3.1",
    "axios": "^0.19.1",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "lodash.debounce": "^4.0.8",
    "loglevel": "^1.6.6",
    "qrcode.react": "^1.0.0",
    "query-string": "^6.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.3.0",
    "reactstrap": "^8.2.0",
    "set-interval-async": "^1.0.30"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^1.10.4",
    "@cypress/instrument-cra": "^1.0.0",
    "@types/async-retry": "^1.4.1",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-ws": "^3.0.0",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^10.17.13",
    "@types/qrcode.react": "^1.0.0",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/reactstrap": "^8.2.0",
    "@types/set-interval-async": "^1.0.0",
    "@types/ws": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "2.x",
    "@typescript-eslint/parser": "2.x",
    "babel-eslint": "10.x",
    "concurrently": "^5.0.2",
    "cypress": "^3.8.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^6.3.1",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "1.x",
    "istanbul-lib-coverage": "^3.0.0",
    "mock-socket": "^9.0.3",
    "node-sass": "^4.13.0",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "start-server-and-test": "^1.10.6",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4",
    "whatwg-fetch": "^3.0.0"
  }
}
